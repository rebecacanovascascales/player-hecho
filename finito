}}

int x=25;
int y=285 ;

void player1() {
  animate(ejecutar);
}
void ejecutar(){
  player();
  controles();
  
}
void player(){
  
	ellipse (x,y,10,15);
}
void controles(){
  if (keyPressed && key=="up"){
    print("arriba");
    y=y-1;
    
  }
  if (keyPressed && key=="down"){
    print("abajo");
    y=y+1;
    
  }
  if (keyPressed && key=="left"){
    print("izquierda");
    x=x-1;
    
  }
  if (keyPressed && key=="right"){
    print("derecha");
    x=x+1;
    
  }
}
  void imageninicio(){
    fill(255,255,255);
 		 textSize(6);
 		 text("INICIO", 13,270);
    
  }
	void imagenfin(){
    fill(255,255,255);
 		 textSize(8);
 		 text("FIN", 286,30);
    
  }
   
        
   void MENU(){
          background(255,214,251);
          imagenEXIT ();
  controlEXIT();
  if (mousePressed){}
  if (mouseButton == LEFTBUTTON){
    ellipse (10,10,10,10);
    text ("¿Como ganar?", 10,70);
    text ("Necesitas hacer el recorrido sin tocar ", 10,90);
    text ("las zonas rojas", 10,110);
    text ("Si el player toca las zonas rojas", 10,170);
    text ("estas eliminado y volverá al punto ", 10,190);
     text ("inicial", 10,210);
    text ("Cada vez que consigas llegar", 10,240);
    text ("ganarás 100 puntos", 10, 260);
  }}
          
void credit(){
  background(247,247,199);
  imagenEXIT ();
  controlEXIT();
  if (mousePressed){}
  if (mouseButton == LEFTBUTTON){
    ellipse (10,10,10,10);
    text ("Rebeca, gracias por jugar",40,180);
  }}
